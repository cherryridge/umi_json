{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Schema for `settings.json`, the dynamically changable settings of CherryGrove.",
    "type": "object",
    "additionalProperties": false,
    "required": ["formatVersion"],
    "properties": {
        "formatVersion": {
            "type": "integer",
            "const": 1
        },
        "packs": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabledPacks": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "default": []
                },
                "packOptions": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["uuid", "version", "identifier", "value"],
                        "properties": {
                            "uuid": {
                                "type": "string",
                                "format": "uuid"
                            },
                            "version": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "identifier": {
                                "type": "string",
                                "minLength": 1
                            },
                            "value": {
                                "type": ["string", "number", "integer", "boolean"]
                            }
                        }
                    },
                    "default": []
                },
                "additionalPackRoots": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "default": []
                },
                "additionalPacks": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "default": []
                }
            },
            "default": {
                "enabledPacks": [],
                "packOptions": [],
                "additionalPackRoots": [],
                "additionalPacks": []
            }
        },
        "graphics": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "fov": {
                    "type": "number",
                    "minimum": 20,
                    "maximum": 150,
                    "default": 70
                },
                "gamma": {
                    "type": "number",
                    "minimum": 0.1,
                    "maximum": 5.0,
                    "default": 1.0
                },
                "maxFPS": {
                    "type": "integer",
                    "$comment": "`0` is for unbounded.",
                    "minimum": 0,
                    "maximum": 240,
                    "default": 60
                },
                "renderDistance": {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 1024,
                    "default": 32
                },
                "windowWidth": {
                    "type": "integer",
                    "minimum": 640,
                    "maximum": 7680,
                    "default": 1920
                },
                "windowHeight": {
                    "type": "integer",
                    "minimum": 480,
                    "maximum": 4320,
                    "default": 1080
                },
                "windowMode": {
                    "type": "string",
                    "enum": ["windowed", "fullscreen"],
                    "default": "windowed"
                },
                "vsync": {
                    "type": "boolean",
                    "default": true
                }
            },
            "default": {
                "fov": 70,
                "gamma": 1.0,
                "maxFPS": 60,
                "renderDistance": 32,
                "windowWidth": 1920,
                "windowHeight": 1080,
                "windowMode": "windowed",
                "vsync": true
            }
        },
        "simulation": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "simulationDistance": {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 128,
                    "default": 16
                },
                "maxPlanckTimePerSec": {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 2048,
                    "default": 20
                }
            },
            "default": {
                "simulationDistance": 16,
                "maxPlanckTimePerSec": 20
            }
        },
        "input": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "mouseSensitivity": {
                    "type": "number",
                    "minimum": 0.1,
                    "maximum": 10.0,
                    "default": 1.0
                },
                "scrollSensitivity": {
                    "type": "number",
                    "minimum": 0.1,
                    "maximum": 10.0,
                    "default": 1.0
                },
                "invertX": {
                    "type": "boolean",
                    "default": false
                },
                "invertY": {
                    "type": "boolean",
                    "default": false
                },
                "comboWindowStart": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 3000,
                    "default": 80
                },
                "comboWindowEnd": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5000,
                    "default": 200
                },
                "maxComboSize": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 192,
                    "default": 6
                },
                "keybinds": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["combo", "actions"],
                        "properties": {
                            "combo": {
                                "type": "array",
                                "additionalItems": false,
                                "items": [
                                    { "type": "integer", "minimum": 0, "maximum": 18446744073709551615, "$comment": "InputHandler::BoolInput::KeyCombo::lower" },
                                    { "type": "integer", "minimum": 0, "maximum": 18446744073709551615, "$comment": "InputHandler::BoolInput::KeyCombo::middle" },
                                    { "type": "integer", "minimum": 0, "maximum": 18446744073709551615, "$comment": "InputHandler::BoolInput::KeyCombo::higher" }
                                ]
                            },
                            "actions": {
                                "type": "array",
                                "uniqueItems": true,
                                "minItems": 1, "$comment": "Have at least one action, or just delete this combo entry.",
                                "items": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": ["uuid", "version", "identifier"],
                                    "properties": {
                                        "uuid": {
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "version": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "identifier": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": []
                }
            },
            "default": {
                "mouseSensitivity": 1.0,
                "scrollSensitivity": 1.0,
                "invertX": false,
                "invertY": false,
                "comboWindowStart": 80,
                "comboWindowEnd": 200,
                "maxComboSize": 6,
                "keybinds": []
            }
        },
        "debug": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "logging": {
                    "type": "string",
                    "enum": ["stdout", "separate", "file"]
                }
            },
            "default": {
                "logging": "file"
            }
        },
        "misc": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "windowTitleBase": {
                    "type": "string",
                    "default": "CherryGrove"
                },
                "checkEngineUpdates": {
                    "type": "boolean",
                    "default": true
                }
            },
            "default": {
                "windowTitleBase": "CherryGrove",
                "checkEngineUpdates": true
            }
        }
    }
}